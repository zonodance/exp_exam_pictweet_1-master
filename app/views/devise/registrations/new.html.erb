  <div class="contents row">
    <div class="container">
      <h2>Sign up</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :nickname %> <em>(6 characters maximum)</em><br />
          <%= f.text_field :nickname, autofocus: true, value: "hoge" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, value: "tech@hoge.com" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", value: "123456" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", value: "123456" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
